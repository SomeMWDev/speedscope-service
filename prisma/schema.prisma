generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Profile {
  id             String   @id
  timestamp      DateTime @default(now())
  wiki           String
  url            String
  cfRay          String
  forced         Boolean
  speedscopeData Bytes
  parserReport   String?
  environment    String

  @@index([timestamp])
  @@index([wiki])
  @@index([url])
  @@index([cfRay])
  @@index([forced])
  @@index([environment])
}

enum AggregatedProfileType {
  DAILY
  HOURLY
}

model AggregatedProfile {
  id             Int      @id @default(autoincrement())
  startTime      DateTime
  endTime        DateTime
  type           AggregatedProfileType
  profileCount   Int
  speedscopeData Bytes

  @@index([type])
}
